{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Запуск плагина VSCode (TS + Yarn)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "yarn: watch", 
      "sourceMaps": true,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}